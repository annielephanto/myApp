
<div class="col-sm-6 col-md-4 each_product">
  <div class="thumbnail">
    <%= image_tag("spot.jpg", class: "img-responsive") %>
  </div>
 
    <h1 class="item_name"><%= product.name %></h1>
    <ul>
     <li>Description: <%= product.description %></p></li> 
      <li>Color: <%= product.color %></li>
      <li><strong> $ <%= product.price %></strong></li>
    </ul>
    <div class="buttons">
      <%= link_to 'Show', product, class:"btn btn-primary", role:"button"%>
      <%= link_to 'Edit', edit_product_path(product), class:"btn btn-default", role:"button" %>
      <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?'}, class:"btn btn-danger", role:"button" %>
      
    </div>
   </div>



